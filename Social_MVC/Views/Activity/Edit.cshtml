@model Social_Models.Activity

<div class="container py-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 style="text-align: center;"> Redigera Event </h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Activity" asp-action="Edit">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="Title" class="form-label">Titel</label>
                            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required>
                        </div>
                        <div class="mb-3">
                            <label for="CreatedBy" class="form-label">Skapare</label>
                            <input type="text" class="form-control" id="CreatedBy" name="CreatedBy" value="@Model.CreatedBy" required>
                        </div>
                        <div class="mb-3">
                            <label for="BirthDate" class="form-label">FÃ¶delsedatum</label>
                            <input type="date" class="form-control" id="BirthDate" name="BirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" required>
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">E-post</label>
                            <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="City" class="form-label">Stad/Ort</label>
                            <input type="text" class="form-control" id="City" name="City" value="@Model.City" required>
                        </div>
                        <div class="mb-3">
                            <label for="Address" class="form-label">Plats</label>
                            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required>
                        </div>
                        <div class="mb-3">
                            <label for="Date" class="form-label">Tid</label>
                            <input type="datetime-local" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" required>
                        </div>
                        <button type="submit" class="btn btn-success">Uppdatera</button>
                        <a href="#" class="btn btn-secondary" onclick="history.go(-1); return false;">Avbryt</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>