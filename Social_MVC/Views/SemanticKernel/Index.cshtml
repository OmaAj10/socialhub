<form asp-controller="SemanticKernel" asp-action="Index" method="post">
    <div class="form-group">
        <label for="GenerateActivity">Aktivitet</label>
        <input type="text" class="form-control" id="GenerateActivity" name="GenerateActivity" required />
    </div>
    <div class="form-group mt-2 mb-2">
        <label for="City">Stad</label>
        <input type="text" class="form-control" id="City" name="City" required />
    </div>
    <button type="submit" class="btn btn-primary">Generera text</button>
</form>

@if (ViewBag.Result != null)
{
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Resultat</h5>
            <p class="card-text">@ViewBag.Result</p>
        </div>
    </div>
}